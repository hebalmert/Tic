@model Tic.Shared.ReportesDTOs.RepCachierDTOs

@{
    ViewData["Title"] = "Crear";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">

            <div class="shadow-lg mb-5 card-roud">
                <div class="card card-roud">
                    <div class="card-body">
                        <p>
                            <h2>Reporte Venta por Cajero</h2>
                        <p />
                        <hr style="height:2px;border:none;color:#333;background-color:#333;" />

                        <flash dismissable="true" />

                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="RepCachierTickets">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="CorporateId" />

                                    <div class="form-group">
                                        <label asp-for="CachierId" class="control-label"></label>
                                        <select asp-for="CachierId" class="form-control" asp-items="ViewBag.CachierId"></select>
                                        <span asp-validation-for="CachierId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DateInicio" class="control-label"></label>
                                        <input asp-for="DateInicio" class="form-control" />
                                        <span asp-validation-for="DateInicio" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DateFin" class="control-label"></label>
                                        <input asp-for="DateFin" class="form-control" />
                                        <span asp-validation-for="DateFin" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <hr style="height:2px;border:none;color:#333;background-color:#333;" />

                                    <div class="form-group">
                                        <br />
                                        <button title="Guardar" type="submit" class="btn btn-outline-warning btn-bor">
                                            <i class="bi-printer"></i>
                                            Reporte
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

