@model Tic.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="contenedor">

    <div class="row" style="width: 450px; margin-left: auto; margin-right:auto;">
        <div class="col-md-12">
            <div class="shadow-lg mb-5 card-roud">
                <div class="card card-roud">
                    <div class="card-body">

                        <form method="post">

                            <div class="row" style="width: 400px; margin-left: auto; margin-right:auto; ">
                                <img src="@Url.Content("~/Images/logo.png")" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                            </div>

                            <h2 style="color:darkblue">Sistema de Acceso</h2>
                            <hr />
                            <br />

                            <div class="form-group">
                                <div class="form-floating mb-3">
                                    <input asp-for="Username" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Email address</label>
                                    <strong><span asp-validation-for="Username" class="text-danger"></span></strong>
                                </div>
                                
                            </div>

                            <div class="form-group">
                                <div class="form-floating">
                                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                                    <label for="floatingPassword">Password</label>
                                    <strong><span asp-validation-for="Password" class="text-danger"></span></strong>
                                </div>
                                
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                                    <strong><span asp-validation-for="RememberMe" class="text-danger"></span></strong>
                                </div>
                                
                            </div>
                            <br />
         
                                <div class="text-danger" asp-validation-summary="All"></div>

                            <br />
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-outline-primary btn-bor" />
                                @* <a asp-action="Register" class="btn btn-outline-dark btn-bor">Sign Up</a>*@

                                <a asp-action="RecoverPasswordMVC" class="btn btn-outline-danger btn-bor">Recuperar Clave</a>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

