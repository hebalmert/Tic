<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="Keywords" content="Software Ticket WIFI, Vender Internet, Software WIFI Mirkotik, Software Venta Mikrotik, Venta Tickets WIFI">
    <meta name="Description" content="Software para la Creacion y Venta de Tickets WIFI, Conectando con equipos Mikrotik.">
    <meta name="Robots" content="all">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Images/SiteLogo.png" type="image/png" />

    <title>@ViewData["Title"] - Tic NexxtPlanet</title>

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tic.Web.styles.css" asp-append-version="true" />

    <!-- Vamos agregar el link de ICONOS BootStrap para consumirlos desde Internet-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/jquerysearch/jquery-ui.css" rel="stylesheet" />
</head>
<body>
    <partial name="_SpinnerLayout" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Laden.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-plus"></i>
                                    Sistema
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-ui-checks-grid"></i>
                                            Control Sistema
                                        </h6>
                                    </li>
                                    <li><a id="_Planes" class="dropdown-item" asp-action="Index" asp-controller="SoftPlans">Planes</a></li>
                                    <li><a id="_Pais" class="dropdown-item" asp-action="Index" asp-controller="Countries">Pais</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a id="_Corporacion" class="dropdown-item" asp-action="Index" asp-controller="Corporates">Corporacion</a></li>
                                    <li><a id="_Usuarios" class="dropdown-item" asp-action="Index" asp-controller="Managers">Usuarios</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-plus"></i>
                                    Configuraciones
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-ui-checks-grid"></i>
                                            Control Sistema
                                        </h6>
                                    </li>
                                    <li><a id="Ticket1" class="dropdown-item" asp-action="Index" asp-controller="TicketInactives">Tiempo Inactividad</a></li>
                                    <li><a id="Ticket2" class="dropdown-item" asp-action="Index" asp-controller="TicketRefreshes">Tiempo Refrescar</a></li>
                                    <li><a id="Ticket3" class="dropdown-item" asp-action="Index" asp-controller="TicketTimes">Tiempos Tickets</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("User"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-cone-striped"></i>
                                    Archivo
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header nav-link">
                                            <i class="bi bi-textarea"></i>
                                            General
                                        </h6>
                                    </li>
                                    <li><a id="_Zonas" class="dropdown-item" asp-action="Index" asp-controller="Zones">Zonas</a></li>
                                    <li><a id="_Marks" class="dropdown-item" asp-action="Index" asp-controller="Marks">Marcas/Modelos</a></li>
                                    <li><a id="_CategoriaPlanes" class="dropdown-item" asp-action="Index" asp-controller="PlanCategories">Categoria Planes</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header mt-3 nav-link">
                                            <i class="bi bi-textarea"></i>
                                            Network
                                        </h6>
                                    </li>
                                    <li><a id="_Ipnetwork" class="dropdown-item" asp-action="Index" asp-controller="IpNetworks">Ip Network</a></li>
                                    <li><a id="_Servers" class="dropdown-item" asp-action="Index" asp-controller="Servers">Servidores/Planes</a></li>
@*                                     <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header mt-3">
                                            <i class="bi bi-textarea"></i>
                                            Planes
                                        </h6>
                                    </li>
                                   
                                    <li><a id="_Planes" class="dropdown-item" asp-action="Index" asp-controller="Plans">Planes Clientes</a></li> *@
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("User"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-cone-striped"></i>
                                    Control
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-cone-striped"></i>
                                            Crear Tickets
                                        </h6>
                                    </li>
                                    <li><a id="Registros" class="dropdown-item" asp-action="Index" asp-controller="OrderTickets">Ordenes Tickets</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-cone-striped"></i>
                                            Venta Tickets
                                        </h6>
                                    </li>
                                    <li><a id="TicketUno" class="dropdown-item" asp-action="Create" asp-controller="SellOnes">Venta Ticket</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header mt-3">
                                            <i class="bi bi-cone-striped"></i>
                                            Venta Tickets
                                        </h6>
                                    </li>
                                    <li><a id="TicketMuchos" class="dropdown-item" asp-action="Create" asp-controller="SellPacks">Venta Cantidad</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("Cachier"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">

                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-cone-striped"></i>
                                    Operaciones
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-person"></i>
                                            Ventas
                                        </h6>
                                    </li>
                                    <li><a id="VentaCachier" class="dropdown-item" asp-action="Create" asp-controller="SellOneCachiers">Venta Ticket</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header mt-3">
                                            <i class="bi bi-cash-coin"></i>
                                            Reportes
                                        </h6>
                                    </li>
                                    <li><a id="ReportCajero" class="dropdown-item" asp-action="RepCajero" asp-controller="Reports">Venta Cajero Dia</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("User"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-printer"></i>
                                    Reportes
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    @if (User.IsInRole("User"))
                                    {
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-archive"></i>
                                               Ventas
                                            </h6>
                                        </li>
                                        <li><a id="ReportCachier" class="dropdown-item" asp-action="RepCachier" asp-controller="Reports">Venta Cajero Dia</a></li>
                                        <li><a id="ReportCachier" class="dropdown-item" asp-action="RepCachierT" asp-controller="Reports">Venta Cajero Tickets</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-bank"></i>
                                                Inventrio Tickets
                                            </h6>
                                        </li>
                                        <li><a id="_InventarioTickets" class="dropdown-item" asp-action="TicketsPlan" asp-controller="StockTickets">Tickets por Plan</a></li>
                                        <li><a id="_InventarioTickets" class="dropdown-item" asp-action="TicketsPlanServer" asp-controller="StockTickets">Tickets por Plan y Servidor</a></li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("User"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-stack"></i>
                                    Configuracion
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-ui-checks"></i>
                                            Controles
                                        </h6>
                                    </li>
                                    <li><a id="_DocumentType" class="dropdown-item" asp-action="Index" asp-controller="DocumentTypes">Tipo Documento</a></li>
                                    <li><a id="Encabezado" class="dropdown-item" asp-action="Index" asp-controller="HeadTexts">Texto Encabezado</a></li>
                                    <li><a id="_Taxes" class="dropdown-item" asp-action="Index" asp-controller="Taxes">Impuestos</a></li>
                                    <li><a id="_Consecutivos" class="dropdown-item" asp-action="Details" asp-controller="Registers">Consecutivos</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-toggles"></i>
                                            Control Mikrotik
                                        </h6>
                                    </li>
                                    <li><a id="_CadenaCode" class="dropdown-item" asp-action="Index" asp-controller="ChainCodes">Cadena Tickets</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-people-fill"></i>
                                            Personal
                                        </h6>
                                    </li>
                                    <li><a id="_Cajeros" class="dropdown-item" asp-action="Index" asp-controller="Cachiers">Cajeros</a></li>
                                </ul>
                            </li>
                        </ul>
                    }

                    <ul class="nav justify-content-end container-fluid">
                        <li class="nav-item dropdown">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content(Context.Session.GetString("Logo"))" class="avatar rounded-circle" alt="mdo" width="36" height="36" />
                                    <label class="mb-1 text-white" ID="lblnomCompañia" style="font-weight:bold;">@Context.Session.GetString("NomCorp")</label>
                                </a>
                            }
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content(Context.Session.GetString("PicUser"))" class="avatar rounded-circle" alt="mdo" width="36" height="36" />
                                    <label class="mb-1 text-white" ID="lblnomCompañia" style="font-weight:bold;">@Context.Session.GetString("NomUser")</label>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePasswordMVC">Cambio Clave</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a></li>
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link active" style="color:white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            }
                        </li>
                        <li class="nav-item dropdown">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <a class="nav-link active text-white" style="font-size: 25px;" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="bi-power"></i>
                                </a>
                            }
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tickets WIFI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>

<script>
    $(document).ready(function () {
        $('#Nombredel ID').click(function () {
            $('.spinner').css('display', 'block');
        });
    });
</script>
