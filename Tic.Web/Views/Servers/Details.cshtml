@model Tic.Shared.EntitiesSoft.Server

@{
    ViewData["Title"] = "Detalle Servidor";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8">
            <div class="shadow-lg mb-5 card-roud">

                <div class="card card-roud">
                    <div class="card-body">
                        <p>
                            <h2>Servidor y Planes</h2>
                        <p />

                        <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.ServerName)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.ServerName)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.IpNetwork!.Ip)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.IpNetwork!.Ip)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Usuario)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Usuario)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Clave)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Clave)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.ApiPort)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.ApiPort)</text>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.WanName)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.WanName)</text>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Mark!.MarkName)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Mark!.MarkName)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.MarkModel!.MarkModelName)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.MarkModel!.MarkModelName)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Zone!.State!.Name)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Zone!.State!.Name)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Zone!.City!.Name)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Zone!.City!.Name)</text>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Zone!.ZoneName)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Zone!.ZoneName)</text>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text" style="width: 130px">@Html.DisplayNameFor(model => model.Active)</span>
                                    <text class="form-control">@Html.DisplayFor(model => model.Active)</text>
                                </div>
                            </div>
                        </div>
                        <hr style="height:2px;border:none;color:#333;background-color:#333;" />

                        <div class="row">
                            <div class="col-md-12">
                                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                                <div class="form-group col-12">
                                    <button title="Volver" type="button" class="btn btn-outline-dark btn-bor" onclick="location.href = '@Url.Action("Index", new  {})'">
                                        <i class="bi bi-box-arrow-left" style="font-size: 20px;"></i>
                                        Volver
                                    </button>

                                    <a title="Editar" asp-action="Edit" asp-route-id="@Model!.ServerId" class="btn btn-outline-primary btn-bor">
                                        <i class="bi bi-pencil-square" style="font-size: 20px;"></i>
                                        Editar
                                    </a>

                                    <a asp-action="Create" asp-controller="Plans" asp-route-id="@Model.ServerId" class="btn btn-outline-primary btn-bor">
                                        <i class="bi bi-plus-square" style="font-size: 20px;"></i>
                                        Nuevo
                                    </a>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div>
                                @if (Model.Plans == null)
                                {
                                <h5>No hay Regitros Para Mostrar</h5>
                                }
                                else
                                {
                                <table class="table table-responsive table-striped table-hover justify-content-center" id="MyTable">
                                    <thead>
                                        <tr>
                                            <th>
                                                    @Html.DisplayNameFor(model => model.Plans!.FirstOrDefault()!.PlanName)
                                            </th>
                                            <th>
                                                    @Html.DisplayNameFor(model => model.Plans!.FirstOrDefault()!.Active)
                                            </th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="reordenable">
                                            @foreach (var item in Model.Plans)
                                            {
                                            <tr>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.PlanName)
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.Active)
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px">
                                                    <a title="Editar" asp-action="Edit" asp-controller="Plans" asp-route-id="@item.PlanId" class="btn btn-outline-dark btn-bor btn-sm"><i class="bi bi-pencil-square" style="font-size: 17px;"></i></a>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px">
                                                    <a title="Detalle" asp-action="Details" asp-controller="Plans" asp-route-id="@item.PlanId" class="btn btn-outline-dark btn-bor btn-sm"><i class="bi bi-card-text" style="font-size: 17px;"></i></a>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px">
                                                    <button type="button" title="Borrar" data-id="@item.PlanId"
                                                            class="btn btn-outline-danger btn-bor btn-sm" id="deleteItem"
                                                            data-bs-toggle="modal" data-bs-target="#deleteDialog">
                                                        <i class="bi bi-trash" style="font-size: 17px;"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            }
                                    </tbody>
                                </table>
                                }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#SaveBtn').click(function () {
                $('.spinner').css('display', 'block');
            });

            sufijoControl = "Plans";
            itemdelete = `/${sufijoControl}/Delete/`;
        });
    </script>
}